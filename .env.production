# Production environment configuration
# Backwards compatible with existing setup

# Frontend variables (VITE_ prefixed for client-side access)
VITE_BACKEND_URL=https://seo-audit-backend-458683085682.us-central1.run.app
VITE_API_TIMEOUT=45000
VITE_ENVIRONMENT=production

# Production settings
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=error

# Backend variables (no VITE_ prefix as they're server-side only) 
PORT=8080
# NODE_ENV=production  # Commented out - not needed for frontend build

# Sitemap Analysis Limits
SITEMAP_MAX_URLS=50

# Enable Lighthouse by Default
LIGHTHOUSE=1

# Logging Configuration
LOG_LEVEL=info
LOG_DIR=logs

# Memory and Performance Settings
MAX_CONCURRENT_AUDITS=3
JOB_TIMEOUT=60000
MEMORY_MONITOR_INTERVAL=30000
MEMORY_CLEANUP_INTERVAL=300000

# Security Settings (Production)
CORS_ORIGIN=https://seo-audit-tool.pages.dev
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=10

# Cache Settings
CACHE_MAX_SIZE=1000
CACHE_TTL_MS=3600000

# Browserless.io Configuration (Cloud Deployment - Recommended)
# Sign up at https://www.browserless.io/ for free 6 hours/month
# Add your token during deployment using the deploy script:
# BROWSERLESS_TOKEN=your-actual-token-here

# PageSpeed Insights Configuration
USE_PSI_METRICS=true

# Google Cloud Configuration (for Cloud Run deployment)
# GOOGLE_CLOUD_PROJECT=your-project-id
# GCP_REGION=us-central1