# Server Configuration
PORT=8080
NODE_ENV=development

# External API Keys (Optional)
PSI_API_KEY=your_pagespeed_insights_key
WPT_API_KEY=your_webpagetest_key
WPT_LOCATION=eu-west-1

# Sitemap Analysis Limits
SITEMAP_MAX_URLS=50

# Enable Lighthouse by Default
LIGHTHOUSE=1

# Logging Configuration
LOG_LEVEL=info
LOG_DIR=logs

# Google Cloud Configuration (for Cloud Run deployment)
GOOGLE_CLOUD_PROJECT=your-project-id
GCP_REGION=us-central1

# Cloudflare Configuration (for frontend deployment)
CLOUDFLARE_ACCOUNT_ID=your-account-id
CLOUDFLARE_ZONE_ID=your-zone-id

# Memory and Performance Settings
MAX_CONCURRENT_AUDITS=3
JOB_TIMEOUT=60000
MEMORY_MONITOR_INTERVAL=30000
MEMORY_CLEANUP_INTERVAL=300000

# Security Settings (Production)
CORS_ORIGIN=https://yourdomain.com
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=10

# Cache Settings
CACHE_MAX_SIZE=1000
CACHE_TTL_MS=3600000

# Puppeteer Configuration (Local Development)
PUPPETEER_SKIP_DOWNLOAD=false
PUPPETEER_EXECUTABLE_PATH=/usr/bin/google-chrome

# Browserless.io Configuration (Cloud Deployment - Recommended)
# Sign up at https://www.browserless.io/ for free 6 hours/month
# BROWSERLESS_URL=wss://chrome.browserless.io
# BROWSERLESS_TOKEN=your-browserless-token