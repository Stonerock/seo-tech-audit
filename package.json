{
  "name": "seo-audit-tool-optimized",
  "version": "2.1.0",
  "description": "Academic-grade SEO audit tool with modern UX",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "start": "node server.js",
    "server:dev": "nodemon server.js",
    "test": "vitest",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "deploy": "npm run build && ./deploy-frontend.sh",
    "build:css": "postcss src/input.css -o dist/styles.css --minify",
    "build:frontend": "npm run build",
    "watch:css": "postcss src/input.css -o dist/styles.css --watch",
    "build:prod": "npm run build"
  },
  "keywords": [
    "seo",
    "audit",
    "performance",
    "academic",
    "research"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "cheerio": "^1.0.0-rc.12",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "express-rate-limit": "^7.3.0",
    "node-fetch": "^2.7.0",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "xml2js": "^0.6.2"
  },
  "frontendDependencies": {
    "@radix-ui/react-progress": "^1.1.7",
    "@tailwindcss/typography": "^0.5.16",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.2.0"
  },
  "frontendDevDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vitest": "^1.0.4"
  },
  "optionalDependencies": {
    "axe-core": "^4.8.2",
    "chrome-launcher": "^1.1.0",
    "compromise": "^14.14.4",
    "franc": "^6.2.0",
    "lighthouse": "^12.0.0",
    "natural": "^8.1.0",
    "puppeteer-core": "^24.9.0"
  }
}
